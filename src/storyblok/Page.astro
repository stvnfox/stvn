---
import { storyblokEditable } from "@storyblok/astro";
import FooterComponent from "../components/FooterComponent.astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok } = Astro.props;
---

<section
    class="min-h-screen w-screen bg-neutral-900 text-neutral-50 dark:bg-neutral-50 dark:text-neutral-950 transition-colors"
>
    <div
        class="flex flex-col mx-auto w-4/5 md:w-1/2 xl:w-1/3"
        {...storyblokEditable(blok)}
    >
        {
            blok.body?.map((blok) => {
                return <StoryblokComponent blok={blok} />;
            })
        }
    </div>
    <FooterComponent />
</section>
