---
import { PortableText } from "astro-portabletext";
import { Icon } from "astro-icon/components"
import { getConnect } from "../utils/sanity";

const data = await getConnect();
---

<section class="my-8 md:my-24 opacity-[0.01] animate-[fade_0.5s_0.65s_ease-in-out] fill-mode-forwards">
        <h2
            class="font-medium text-2xl md:text-lg mb-4"
        >
            { data.label }
        </h2>
        <div
            class="connect font-light mb-6"
        >
            <PortableText value={data.introduction}/>
        </div>
        <div class="flex gap-4">
            { data.connectItems.map((item) => 
                <a
                    href={item.link}
                    target="_blank"
                    aria-label={item.ariaLabel}
                    rel="noopener noreferrer"
                    class="flex items-center group dark:text-neutral-50 text-red-600 hover:dark:text-neutral-200 hover:text-red-800 transition-colors mb-4 md:mb-3 w-fit"
                >
                    <Icon name={`mdi:${item.icon}`} class="h-6 w-6" />
                </a>
            )}
        </div>
</section>