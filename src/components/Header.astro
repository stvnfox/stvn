---
import { PortableText } from "astro-portabletext";
import { getIntroduction } from '../utils/sanity';

const introduction = await getIntroduction()
const title = introduction.title
---

<header class="mt-24 mb-12 md:my-24">
    <h1 class="font-medium text-2xl mb-4 opacity-[0.01] animate-[fade_0.5s_0.3s_ease-in-out] fill-mode-forwards">{title}</h1>
    <div class="font-light introduction opacity-[0.01] animate-[fade_0.5s_0.4s_ease-in-out] fill-mode-forwards">
        <PortableText
            value={introduction.content}
        />
    </div>
</header>